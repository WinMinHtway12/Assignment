<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">


    <fragment
        android:id="@+id/nav_popular"
        android:name="com.themovie.assignment.ui.nowplaying.NowplayingFragment"
        android:label="Now Playing"
        tools:layout="@layout/fragment_nowplaying" >
        <action
            android:id="@+id/action_nav_popular_to_nav_detail"
            app:destination="@id/nav_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_nowplaying"
        android:name="com.themovie.assignment.ui.popular.PopularFragment"
        android:label="Popular"
        tools:layout="@layout/fragment_popular" >
        <action
            android:id="@+id/action_nav_nowplaying_to_nav_detail"
            app:destination="@id/nav_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_upcoming"
        android:name="com.themovie.assignment.ui.upcoming.UpcomingFragment"
        android:label="Upcoming"
        tools:layout="@layout/fragment_upcoming" >
        <action
            android:id="@+id/action_nav_upcoming_to_nav_detail"
            app:destination="@id/nav_detail" />
    </fragment>
    <fragment
        android:id="@+id/nav_toprated"
        android:name="com.themovie.assignment.ui.toprated.TopratedFragment"
        android:label="Toprated"
        tools:layout="@layout/fragment_toprated" >
        <action
            android:id="@+id/action_nav_toprated_to_nav_detail"
            app:destination="@id/nav_detail" />
    </fragment>
    <fragment
        android:id="@+id/nav_home"
        android:name="com.themovie.assignment.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_detail"
            app:destination="@id/nav_detail" />
    </fragment>
    <fragment
        android:id="@+id/nav_detail"
        android:name="com.themovie.assignment.ui.detail.DetailFragment"
        android:label="Movie detail">
        <argument
            android:name="item"
            app:argType="com.themovie.assignment.model.ResultsItem" />
    </fragment>
</navigation>